            <TextView
                android:id="@+id/lugarInfo"
                android:layout_width="194dp"
                android:layout_height="61dp"
                android:layout_below="@+id/pesoInfo"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="8dp"
                android:text=""
